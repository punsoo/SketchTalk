<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="25dp"  android:id="@+id/sectionHeader_check"
        android:background="#b7b09f" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Section"
            android:id="@+id/sectionText_check"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/api_frame">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="42dp"  android:id="@+id/profile_container_check" >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/profile_image_check"
                android:src="@drawable/default_profile_image"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/textView1_check"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/profile_image_check"
                android:layout_marginStart="10dp"/>



            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/check_image"
                android:src="@drawable/check_icon_inact"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:foregroundGravity="center_vertical"/>

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>
